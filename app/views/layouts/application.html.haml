!!! 5
%html{ :lang => "en" }
  %head
    %meta{ :charset => "utf-8" }

    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }

    %title= content_for?(:title) ? yield(:title) : "NUME(ヌメ) | 数値記憶トレーニング用アプリケーション"

    = stylesheet_link_tag "application"
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tag
    = analytics_init if Rails.env.production? && GoogleAnalytics.valid_tracker?

  %body

    %header
      #h-logo
        = link_to "NUME", root_path
      #h-open-menu
        %i.fa.fa-bars

    #cover
    #menu
      %i.fa.fa-times#close
      %ul
        - unless user_signed_in?
          %li
            = link_to "ログイン", new_user_session_path
          %li
            = link_to "会員登録", new_user_registration_path
        - else
          %li
            = link_to "ログアウト", destroy_user_session_path, method: :delete

    = yield

:coffee
  $ ->
    # プロパティー系
    $h_open_menu = $('#h-open-menu')
    $cover = $('#cover')
    $menu = $('#menu')
    $close = $('#close')

    ## イベント系
    $h_open_menu.click ->
      $cover.fadeIn()
      $menu.fadeIn()

    $close.click ->
      $cover.fadeOut()
      $menu.fadeOut()
